<view class="container" style="width: 750rpx; height: 103rpx; display: flex; box-sizing: border-box">
  <!-- 用户头像和登录提示 -->
  <view class="profile">
    <!-- 头像占位容器 -->
    <view class="avatar-box">
      <!-- 头像图片 -->
      <image src="../../images/user.png" class="avatar" mode="aspectFill"></image>
    </view>
    <!-- 登录提示文本 -->
    <text class="login-text">点击登录</text>
  </view>

  <!-- 菜单项 -->
  <view class="menu">
    <!-- 个人资料 -->
    <navigator class="menu-item" url="/pages/person/person" open-type="navigate">
      <image src="../../images/person.png" class="menu-logo"></image>
      <text class="menu-text">个人资料</text>
      <image src="../../images/arrow_right.png" class="menu-icon"></image>
    </navigator>
    <!-- 待出行 -->
    <navigator class="menu-item" url="/pages/ready/ready" open-type="navigate">
      <image src="../../images/ready.png" class="menu-logo"></image>
      <text class="menu-text">待出行</text>
      <image src="../../images/arrow_right.png" class="menu-icon"></image>
    </navigator>
    <!-- 已完成 -->
    <navigator class="menu-item" url="/pages/finish/finish" open-type="navigate">
      <image src="../../images/finish.png" class="menu-logo"></image>
      <text class="menu-text">已完成</text>
      <image src="../../images/arrow_right.png" class="menu-icon"></image>
    </navigator>
  </view>
</view>
