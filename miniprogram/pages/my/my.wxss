/* 页面整体容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff; /* 白色背景 */
  min-height: 100vh; /* 保证容器至少占满屏幕高度 */
  padding-bottom: 100rpx; /* 底部填充，防止内容贴底 */
}

/* 个人信息区容器 */
.profile {
  width: 100%;
  padding: 40rpx 0; /* 上下填充 */
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff; /* 白色背景 */
 
}

/* 头像容器 */
.avatar-box {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx; /* 圆形边框 */
  border: 2rpx solid #5c8654; /* 深绿色边框 */
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx; /* 头像与登录文本的间距 */
}

/* 头像图片 */
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx; /* 圆形图片 */
  background-color: #eaeaea; /* 灰色背景，作为占位符 */
}

/* 登录提示文本 */
.login-text {
  font-size: 34rpx; /* 字体大小 */
  color: #5c8654; /* 深绿色字体颜色 */
}

/* 菜单区域 */
.menu {
  border-top:5rpx solid #eeeeee;
  width: 100%;
  margin-top: 160rpx; /* 顶部与个人信息区的间距 */
  background-color: #ffffff;
}

/* 单个菜单项 */
.menu-item {
  display: flex;
  justify-content: space-between; /* 左右对齐 */
  align-items: center;
  padding: 50rpx 20rpx; /* 内边距 */
  background-color: #ffffff; /* 白色背景 */
  border-bottom: 5rpx solid #eeeeee; /* 底部边框，分隔线 */
}

/* 菜单文本 */
.menu-text {
  font-size: 32rpx; /* 字体大小 */
  color: #333333; /* 深灰色字体颜色 */
}

/* 右箭头图标 */
.menu-icon {
  width: 20rpx;
  height: 20rpx;
}
