.finish-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 头部 */
.finish-header {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  background-color: #e5e5e5;
  height: 120rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.header-logo {
  width: 60rpx;
  height: 60rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-left: 20rpx;
}

/* 行程卡片 */
.trip-card {
  background-color: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.trip-info {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.date-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.trip-date-picker {
  display: flex;
  align-items: center;
  flex: 1;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  padding: 10rpx;
  background-color: #fff;
  margin-right: 20rpx;
}

.trip-date {
  flex: 1;
  color: #333;
}

.arrow-icon {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.trip-details {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}
