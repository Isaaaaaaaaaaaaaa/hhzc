page {
  margin: 0;
  font-family: Arial, sans-serif;
}
/*搜索框*/
.search-container {
  display: flex;
  justify-content: center;
  background-color: #006400;
}
.search-box {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 60rpx;
  padding: 10rpx ;
  margin-bottom:16rpx;
  width: 60%;
  max-width: 1200rpx;
}

.icon {
  font-size: 40rpx;
  color: gray;
}

/*轮播图*/

.lbt-container {
  height: 300rpx; 
  display: flex; 
  align-items: flex-end;
  justify-content: flex-end;
}

.lbt-swiper{
  width: 100%;
}
.slide-image {
  width: 100%;
}

/*十个小窗口*/
.xck-container {
  display: flex;
  flex-wrap: wrap;
  margin: 50rpx auto 30rpx;
  width:90%;
}

.hang {
  display: flex;
  width: 100%;
  justify-content: space-around;
  margin-bottom: 10px;
}

.hang-item {
  width: 18%;
  text-align: center;
}

.b-color {
  display: block;
  text-align: center;
  outline: none;
  border-radius: 30rpx;
}

.hang-image {
  width: 80%;
  height: 100rpx; /* 固定图片高度 */
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.hang-text {
  font-size: 28rpx;
  font-weight: bolder;
}

/*分界线*/
.divider1 {
  width: 100%;      /* 占满父容器宽度 */
  height: 26rpx;      /* 设定线条高度 */
  background-color: #f5f5f5; /* 灰色 */
}

/*公告*/
.announcement {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.announcement-title {
  background-color: #006400;
  font-size: 26rpx;
  font-weight: bolder;
  color: white;
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
  margin-left: 10rpx;
  margin-right: 30rpx;
}

.announcement-content {
  flex: 1;
  font-size: 26rpx;
  font-weight: bolder;
}
.company-name{
  color:#006400;
  font-weight: bolder;
}

/*资源分类*/

.resource-category {
  display: flex;
  flex-direction: column;
  width:100%;
  background-color: #f5f5f5;
}

.text-container {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.star-container {
  margin-right:3%;
  margin-left: 3%;
}

.star {
  width: 40rpx; 
  height: 40rpx;
}

.title-container text {
  font-size: 26rpx;
  font-weight: bolder;
  color: #333;
}

.divider2 {
  width: 80%;
  height: 2rpx;
  background-color: #ccc;
  margin: 0 auto 16rpx;
}

/*农耕体验文字栏*/
.nav {
  display: flex;
  justify-content: space-around;
  padding-top: 26rpx;
  font-size: 24rpx;
  font-weight: bolder;
}

.nav-item {
  color: grey; /* 默认颜色 */
  padding: 5px 10px;
  position: relative; /* 为下划线定位 */
}

.hover {
  color: #006400; /* 悬浮时的字体颜色 */
}

.selected{
  color:#006400;
}
.images {
  display: flex;
  justify-content: space-around;
  padding-top: 20px;
}

.image-placeholder {
  width: 180rpx;
  height: 180rpx;
  background-color:#f5f5f5;
}

/*往期活动*/
.activity {
  padding: 10%;
}

.activity-item {
  margin-bottom: 60rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.activity-title {
  font-size: 30rpx;
  color: #006400;
  font-weight: bold;
}

.activity-info {
  font-size: 24rpx;
  color: gray;
}
.activity-image-container { 
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.activity-image {
  width: 100%;
  object-fit: cover; /* 保持比例并覆盖 */
  background-color: #f5f5f5;
}