.evaluate-header {
  display: flex;
  align-items: center;
  background-color: #f5f5f5; /* 背景颜色 */
  padding: 10px;
}

.logo {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.title {
  font-size: 16px;
  color: #333;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.comment-box-container {
  position: relative;
  width: 80%;
  margin-bottom: 20px;
}

.icon-mail {
  position: absolute;
  top: -25px; /* Adjust this value as needed */
  left: -25px; /* Adjust this value as needed */
  width: 50px;
  height: 50px;
}

.comment-box {
  width: 100%;
  height: 100px;
  border: 1px solid #ccc;
  padding: 10px;
  font-size: 14px;
}

.submit-button {
  background-color: #e8ecd8;
  border: none;
  padding: 10px 20px;
  font-size: 16px;
  color: #333;
  cursor: pointer;
}
