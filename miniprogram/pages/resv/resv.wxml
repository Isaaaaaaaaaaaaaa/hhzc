<!--pages/resv/resv.wxml-->
<view class="resv-img"> 
  <image src="/images/reserve.png"/>
</view>


<view class="reserve">
  <view class="picker">
    <input class="picker-input" placeholder="预约团队" />
  </view>
  <view class="picker">
    <input class="picker-input" placeholder="日期" />
  </view>
  <view class="picker">
    <input class="picker-input" placeholder="人数" />
  </view>

  <view class="options">
    <checkbox-group class="checkbox-group">
      <view class="checkbox-row">
        <label class="checkbox-item"><checkbox value="1"/> 选项1</label>
        <label class="checkbox-item"><checkbox value="2" /> 选项2</label>
      </view>
      <view class="checkbox-row">
        <label class="checkbox-item"><checkbox value="3" /> 选项3</label>
        <label class="checkbox-item"><checkbox value="4" /> 选项4</label>
      </view>
    </checkbox-group>
  </view>

  <view>
    <button bindtap="makeReservation">确定</button>
  </view>
</view>
